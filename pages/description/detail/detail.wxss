.detail{
    padding: 30rpx;
    background: #fff;
    box-sizing: border-box;
}
.detail caption{
    padding: 30rpx 0;
    color: #333;
    border-bottom: 1rpx solid #e9e9e9;
    font-size: 36rpx;
    line-height: 44rpx;
    font-weight: bold
}
.article text{
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
    line-height: 44rpx;
    display:block;
}
.article image{
    display: block;
    margin-top: 10px;
    width: 100%;
    height:340rpx;
}
